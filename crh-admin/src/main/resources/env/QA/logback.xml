<configuration>
	<contextName>standard-code</contextName>
	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %level %logger{55} - %msg%n
			</pattern>
		</encoder>
	</appender>
	<appender name="rollFile"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${catalina.base}/logs/wrw-admin.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${catalina.base}/logs/wrw-admin.log.%d{yyyy-MM-dd}.log
			</FileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{35} -
				%msg%n</pattern>
		</encoder>
	</appender>

	<logger name="com.hengtiansoft" level="info" />

	<root level="info">
		<appender-ref ref="console" />
		<appender-ref ref="rollFile" level="error" />
	</root>
</configuration>
